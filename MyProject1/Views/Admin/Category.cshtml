
@{
    ViewBag.Title = "Category";
    Layout = "~/Views/Shared/admin.cshtml";
}

<div class="row p-5">
    <!--start of form card-->
    <div class="col-sm-4 card">
        <div class="card-body">
            <h4 class="card-tittle text-dark pt-3" style="text-align:center;">ADD<span class="txt-mycolor">CATEGORY</span></h4>
            <form method="post" enctype="multipart/form-data">
            <div class="form-group mt-3">
                <b>Category Name</b><br/>
                <input type="text" class="mb-3 form-control" id="catname" name="catname" aria-describedby="Category" placeholder="Enter Product Category" />
            </div>
            <div class="form-group">
               <b > Category Images</b><br/>
                <input type="file" class="form-control" id="caticon" name="caticon" aria-describedby="Category" />
            </div>
            <input class="btn bg-mycolor mt-3 text-light" type="submit" style="background:#c6003d" value="ADD NOW"/>
            </form>
        </div>
    </div>
    <div class="col-sm-7 ms-5 card text-center">
        <div class="card-body">
            <table class="table table-bordered table-striped-columns">
                <thead>
                    <tr>
                        <th>Sr No.</th>
                        <th>Category</th>
                        <th>Category Img</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        if (ViewBag.data != null)
                        {
                            foreach(var w in ViewBag.data.Rows)
                {
                    <tr>
                        <td>@w[0]</td>
                        <td>@w[1]</td>
                        <td><img src="~/Content/caticon/@w[2]" height="50px" width="50px"/></td>
                        <td>
                            <i class="fa-solid fa-check text-success p-2"></i>
                            <i class="fa-solid fa-trash text-danger p-2"></i>
                        </td>
                    </tr>  
                            }
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

