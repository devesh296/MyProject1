
@{
    ViewBag.Title = "Password";
    Layout = "~/Views/Shared/admin.cshtml";
}

<div class="container">
    <div class="row mt-5">
        <div class="col-sm-4 mx-auto p-5" style="background: white; box-shadow: 0px 0px 20px 5px rgba(128, 128, 128,.5); ">
            <h3 style="text-align:center;">Change<b class="txt-mycolor"> Password <i class="fa-solid fa-unlock-keyhole"></i></b></h3>
            <form method="post" enctype="multipart/form-data">
                <div class="row mt-3">
                    <div class="col-sm-12">
                        Old Password<br />
                        <input type="text" placeholder="Old Password" required class="form-control" name="opassword"/>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-sm-12">
                        New Password<br />
                        <input type="text"placeholder="New Password" required class="form-control" name="npassword" />
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-sm-12">
                        Confirm Password<br />
                        <input type="text" placeholder="Confirm Password" required class="form-control" name="cpassword"/>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-sm-12">
                        <input type="submit" value="UPDATE NOW" class="text-light form-control btn bg-mycolor"/>
                    </div>
                </div>
            </form>
        </div>
     </div>
 </div>

