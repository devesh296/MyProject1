
@{
    ViewBag.Title = "AdminLogin";
    Layout = "~/Views/Shared/admin.cshtml";
}

<div class="container">
    <div class="row mt-5">
        <div class="col-sm-4"></div>
        
            <form method="post">
                <div class="col-sm-5 mx-auto my-auto mt-5 pt-3 pb-5 px-5" style="background: white; box-shadow: 0px 0px 20px 5px rgba(128, 128, 128,.5); ">
                    <h2 class="text-center">Admin <span class="txt-mycolor">Login <i class="fa-solid fa-key fa-spin"></i></span></h2>
                    <b> Enter your Id</b><br />
                    <input type="text" name="adminid" placeholder="Enter your ID" class="form-control" required />
                    <br />
                    <b> Enter Your Password</b><br />
                    <input type="password" required placeholder="Enter your password" name="password" class="form-control" /><br />
                    <input type="submit" value="Login" class="form-control text-light bg-mycolor" />
                </div>
            </form>
        
        <div class="col-sm-3"></div>
    </div>
</div>